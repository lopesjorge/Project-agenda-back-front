<%- include('includes/head'); %>
<%- include('includes/navbar'); %>
   
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça login ou crie sua conta</p>

      <!-- <div class="row">
        <div class="col my-3">
          <div class="alert alert-danger">Contato não encontrado!</div>
        </div>
      </div> -->

    <div class="row">

      <div class="col-lg">
        <h4>Crie sua conta</h4>
        <p>Caso não possua conta, crie sua conta e aproveite nossos serviços</p>
        <form action="/login/register" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken%>" >
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Criar conta</button>
        </form>

      </div>

      <div class="col-lg">
        <h4>Login</h4>
        <p>Faça login e aproveite!</p>

        <form action="/login/login" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken%>" >
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email">
          </div>
          <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
 
<%- include('includes/footer'); %>