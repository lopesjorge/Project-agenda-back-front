<%- include('includes/head'); %>
<%- include('includes/navbar'); %>
   
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Contato</h1>
        <p class="text-center lead">Crie ou edite seus contatos abaixo</p>

        <%- include('includes/messages') %>

        <div class="col-lg">
          <h4>Crie sua conta</h4>
          <p>Caso não possua conta, crie sua conta e aproveite nossos serviços</p>

          <% if(contato._id) { %>
          <form action="/contato/edit<%=contato._id%>" method="post">
            <% } else { %>
              <form action="/contato/register" method="post">
              <% }%>
            <input type="hidden" name="_csrf" value="<%= csrfToken%>" >
            <div class="mb-3">
              <label class="form-label">Nome</label>
              <input value="<%= contato.nome %>" type="text"class="form-control" name="nome">
            </div>
            <div class="mb-3">
              <label class="form-label">Sobrenome</label>
              <input value="<%= contato.sobrenome %>"  type="text" class="form-control" name="sobrenome">
            </div>
            <div class="mb-3">
              <label class="form-label">E-mail</label>
              <input value="<%= contato.email %>" type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label class="form-label">Telefone</label>
              <input value="<%= contato.telefone %>"  type="tel" class="form-control" name="nome">
            </div>
            
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
        </div>
  
      </div>
    <div class="col-lg-2"></div>
  </div>
</div>
 
<%- include('includes/footer'); %>